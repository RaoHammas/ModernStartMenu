<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Color x:Key="BackgroundColor">White</Color>
    <Color x:Key="ForegroundColor">#818183</Color>
    <Color x:Key="MiddleColor">#D8D8D8</Color>
    <Color x:Key="TopSectionColor">WhiteSmoke</Color>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}" />
    <SolidColorBrush x:Key="MiddleBrush" Color="{StaticResource MiddleColor}" />
    <SolidColorBrush x:Key="ToSectionBrush" Color="{StaticResource TopSectionColor}" />

</ResourceDictionary>